{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "./**/*.hbs",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  },
  "monorepo": true,
  "projects": {
    "app-admin": {
      "type": "application",
      "root": "apps/app-admin",
      "entryFile": "main",
      "sourceRoot": "apps/app-admin/src",
      "compilerOptions": {
        "tsConfigPath": "apps/app-admin/tsconfig.app.json"
      }
    },
    "app-cloud-api": {
      "type": "application",
      "root": "apps/app-cloud-api",
      "entryFile": "main",
      "sourceRoot": "apps/app-cloud-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/app-cloud-api/tsconfig.app.json"
      }
    },
    "app-cloud-cron": {
      "type": "application",
      "root": "apps/app-cloud-cron",
      "entryFile": "main",
      "sourceRoot": "apps/app-cloud-cron/src",
      "compilerOptions": {
        "tsConfigPath": "apps/app-cloud-cron/tsconfig.app.json"
      }
    },
    "app-base-tg-bot": {
      "type": "application",
      "root": "apps/app-base-tg-bot",
      "entryFile": "main",
      "sourceRoot": "apps/app-base-tg-bot/src",
      "compilerOptions": {
        "tsConfigPath": "apps/app-base-tg-bot/tsconfig.app.json"
      }
    }
  }
}