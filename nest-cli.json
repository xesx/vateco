{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "monorepo": true,
  "projects": {
    "app-admin": {
      "type": "application",
      "root": "apps/app-admin",
      "entryFile": "main",
      "sourceRoot": "apps/app-admin/src",
      "compilerOptions": {
        "tsConfigPath": "apps/app-admin/tsconfig.app.json"
      }
    },
    "app-telegram-bot": {
      "type": "application",
      "root": "apps/app-telegram-bot",
      "entryFile": "main",
      "sourceRoot": "apps/app-telegram-bot/src",
      "compilerOptions": {
        "tsConfigPath": "apps/app-telegram-bot/tsconfig.app.json"
      }
    }
  }
}